<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:ext="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/st_settings_bg"
            android:fadingEdge="none">
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:paddingLeft="16dp"
                  android:paddingRight="16dp"
                  android:paddingBottom="16dp">

        <TextView android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="16dp"
                  android:layout_marginLeft="8dp"
                  android:layout_marginBottom="2dp"
                  android:layout_marginRight="8dp"
                  android:textColor="@color/st_section_text"
                  android:textSize="@dimen/section_header_text"
                  android:textStyle="bold"
                  android:text="@string/st_appearance_header_common"/>
        <View android:layout_width="fill_parent"
              android:layout_height="@dimen/st_section_h"
              android:background="@color/st_section_line"/>

        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="64dp"
                      android:gravity="center_vertical"
                      android:orientation="vertical"
                      android:clickable="true"
                      android:background="@drawable/st_list_selector"
                      android:id="@+id/chatBackgrounds">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="8dp"
                      android:layout_marginRight="8dp"
                      android:textSize="18sp"
                      android:textColor="@color/st_section_title"
                      android:text="@string/st_appearance_background"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:paddingLeft="8dp"
                      android:paddingRight="8dp"
                      android:textSize="15sp"
                      android:textColor="@color/st_section_subtitle"
                      android:text="@string/st_appearance_background_subtitle"/>
        </LinearLayout>

        <View android:layout_width="fill_parent"
              android:layout_height="@dimen/st_section_div_h"
              android:background="@color/st_section_div"/>

        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="64dp"
                      android:gravity="center_vertical"
                      android:orientation="vertical"
                      android:clickable="true"
                      android:background="@drawable/st_list_selector"
                      android:id="@+id/barBackground">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="8dp"
                      android:layout_marginRight="8dp"
                      android:textSize="18sp"
                      android:textColor="@color/st_section_title"
                      android:text="@string/st_appearance_bar"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:paddingLeft="8dp"
                      android:paddingRight="8dp"
                      android:textSize="15sp"
                      android:textColor="@color/st_section_subtitle"
                      android:text="@string/st_appearance_bar_subtitle"/>
        </LinearLayout>

        <TextView android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="16dp"
                  android:layout_marginLeft="8dp"
                  android:layout_marginBottom="2dp"
                  android:layout_marginRight="8dp"
                  android:textColor="@color/st_section_text"
                  android:textSize="@dimen/section_header_text"
                  android:textStyle="bold"
                  android:text="@string/st_appearance_header_chat"/>
        <View android:layout_width="fill_parent"
              android:layout_height="@dimen/st_section_h"
              android:background="@color/st_section_line"/>

        <org.telegram.android.ui.RtlLinearLayout android:layout_width="fill_parent"
                                                 android:layout_height="64dp"
                                                 android:clickable="true"
                                                 android:id="@+id/savePhotos"
                                                 android:background="@drawable/st_list_selector">

            <LinearLayout android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          ext:layout_weight="1"
                          ext:layout_gravity="center_vertical">
                <TextView android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginRight="8dp"
                          android:layout_marginLeft="8dp"
                          android:textSize="18sp"
                          android:textColor="@color/st_section_title"
                          android:text="@string/st_settings_save_photo"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:paddingLeft="8dp"
                          android:paddingRight="8dp"
                          android:textSize="15sp"
                          android:textColor="@color/st_section_subtitle"
                          android:text="@string/st_settings_save_photo_subtitle"/>
            </LinearLayout>

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="1dp"
                       android:layout_marginLeft="4dp"
                       android:layout_marginRight="4dp"
                       ext:layout_gravity="center_vertical"
                       android:src="@drawable/holo_btn_check_on"
                       android:id="@+id/saveToGalleryCheck"
                       android:duplicateParentState="true"/>
        </org.telegram.android.ui.RtlLinearLayout>

        <View android:layout_width="fill_parent"
              android:layout_height="@dimen/st_section_div_h"
              android:background="@color/st_section_div"/>

        <org.telegram.android.ui.RtlLinearLayout android:layout_width="fill_parent"
                                                 android:layout_height="64dp"
                                                 android:clickable="true"
                                                 android:background="@drawable/st_list_selector"
                                                 android:id="@+id/sendByEnterSelector">

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          ext:layout_gravity="center_vertical"
                          android:orientation="vertical">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="8dp"
                          android:layout_marginRight="8dp"
                          android:textSize="18sp"
                          android:textColor="@color/st_section_title"
                          android:text="@string/st_appearance_enter"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:paddingLeft="8dp"
                          android:paddingRight="8dp"
                          android:textSize="15sp"
                          android:textColor="@color/st_section_subtitle"
                          android:id="@+id/sendByEnterSubtitle"/>
            </LinearLayout>

            <View android:layout_width="0dp"
                  android:layout_height="0dp"
                  ext:layout_weight="1"/>
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="1dp"
                       android:layout_marginLeft="4dp"
                       android:layout_marginRight="4dp"
                       ext:layout_gravity="center_vertical"
                       android:src="@drawable/holo_btn_check_on"
                       android:id="@+id/sendByEnterCheck"
                       android:duplicateParentState="true"/>
        </org.telegram.android.ui.RtlLinearLayout>

        <View android:layout_width="fill_parent"
              android:layout_height="@dimen/st_section_div_h"
              android:background="@color/st_section_div"/>

        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="64dp"
                      android:orientation="vertical"
                      android:gravity="center_vertical"
                      android:background="@drawable/st_list_selector"
                      android:id="@+id/fontSelect">
            <TextView android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="8dp"
                      android:layout_marginRight="8dp"
                      android:textSize="18sp"
                      android:textColor="@color/st_section_title"
                      android:text="@string/st_appearance_font_size"
                      android:id="@+id/fontSizeValue"/>
            <TextView android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:paddingLeft="8dp"
                      android:paddingRight="8dp"
                      android:textSize="15sp"
                      android:textColor="@color/st_section_subtitle"
                      android:text="@string/st_appearance_font_size_subtitle"/>
        </LinearLayout>

        <TextView android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="16dp"
                  android:layout_marginLeft="8dp"
                  android:layout_marginBottom="2dp"
                  android:layout_marginRight="8dp"
                  android:textColor="@color/st_section_text"
                  android:textSize="@dimen/section_header_text"
                  android:textStyle="bold"
                  android:text="@string/st_appearance_header_dialogs"/>
        <View android:layout_width="fill_parent"
              android:layout_height="@dimen/st_section_h"
              android:background="@color/st_section_line"/>

        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="64dp"
                      android:orientation="vertical"
                      android:gravity="center_vertical"
                      android:background="@drawable/st_list_selector"
                      android:id="@+id/itemsSizeSelect">
            <TextView android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="8dp"
                      android:layout_marginRight="8dp"
                      android:textSize="18sp"
                      android:textColor="@color/st_section_title"
                      android:text="@string/st_appearance_item_size"
                      android:id="@+id/itemSizeValue"/>

            <TextView android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:paddingLeft="8dp"
                      android:paddingRight="8dp"
                      android:textSize="15sp"
                      android:textColor="@color/st_section_subtitle"
                      android:text="@string/st_appearance_item_size_subtitle"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>