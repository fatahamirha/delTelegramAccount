<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/st_settings_bg">
    <ListView android:layout_height="fill_parent"
              android:layout_width="fill_parent"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              android:scrollbarStyle="insideOverlay"
              android:clipToPadding="false"
              android:cacheColorHint="@color/st_settings_bg"
              android:id="@+id/usersList"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="top|center_horizontal"
              android:paddingLeft="24dp"
              android:paddingRight="24dp"
              android:paddingTop="24dp"
              android:gravity="center"
              android:textColor="@color/st_empty_text"
              android:textSize="19sp"
              android:id="@+id/empty"
              android:text="@string/st_blocked_empty"/>

    <FrameLayout android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:id="@+id/loading"
                 android:background="@color/st_settings_bg">
        <ProgressBar android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     style="@style/Widget.Sherlock.Light.ProgressBar"/>
    </FrameLayout>

</FrameLayout>